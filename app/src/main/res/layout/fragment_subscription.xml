<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first"
    tools:context="com.example.projet.SubscriptionFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/app"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:textStyle="bold"
            app:texts="@array/subs"
            app:timeout="1000" />


        <TextView
            android:id="@+id/subDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="Click on the Subscribe button for the plan you choosed:"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="299dp"
            android:layout_height="152dp"
            android:layout_below="@+id/subDesc"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="53dp"
            android:background="@drawable/back"
            android:orientation="vertical">

            <com.tomer.fadingtextview.FadingTextView
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:shadowColor="#F5A623"
                android:shadowDx="12"
                android:shadowDy="12"
                android:shadowRadius="8"
                app:texts="@array/plan1"
                app:timeout="1000"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/subscribe1"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_alignEnd="@+id/text1"
                android:src="@drawable/subscribe" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="299dp"
            android:layout_height="152dp"
            android:layout_below="@+id/LinearLayout1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp"
            android:background="@drawable/back"
            android:orientation="vertical">

            <com.tomer.fadingtextview.FadingTextView
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:shadowColor="#F5A623"
                android:shadowDx="12"
                android:shadowDy="12"
                android:shadowRadius="8"
                app:texts="@array/plan2"
                app:timeout="1000"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/subscribe2"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_alignEnd="@+id/text1"
                android:src="@drawable/subscribe" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="299dp"
            android:layout_height="180dp"
            android:layout_below="@+id/LinearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/back"
            android:orientation="vertical">

            <com.tomer.fadingtextview.FadingTextView
                android:id="@+id/text4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:shadowColor="#F5A623"
                android:shadowDx="12"
                android:shadowDy="12"
                android:shadowRadius="8"
                app:timeout="1000"
                app:texts="@array/offer"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/subscribe3"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_alignEnd="@+id/text1"
                android:src="@drawable/subscribe" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
</ScrollView>